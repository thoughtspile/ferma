{
  "name": "formaster",
  "version": "0.0.1",
  "description": "HTML forms with less pain",
  "bugs": {
    "url": "https://github.com/thoughtspile/formaster/issues"
  },
  "homepage": "https://github.com/thoughtspile/formaster#readme",
  "keywords": [
    "form",
    "validation"
  ],
  "type": "module",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtspile/formaster.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "test": "npx vitest",
    "dev": "npx vite dev",
    "build": "tsc",
    "terser": "npx terser dist/index.js -m -c --toplevel > dist/index.min.js",
    "size:gz": "cat dist/index.min.js | gzip -c | wc -c",
    "size": "npm run terser && npm run size:gz"
  },
  "author": "Vladimir Klepov v.klepov@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "terser": "^5.31.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vitest": "^2.0.5"
  }
}
