{
	"compilerOptions": {
		"module": "es2020",
		"lib": ["ES6", "DOM"],
		"moduleResolution": "node",
		"target": "ES2020",
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"declaration": true,
		"rootDirs": ["./src"],
		"outDir": "dist",
	},
	"include": ["src"]
}

